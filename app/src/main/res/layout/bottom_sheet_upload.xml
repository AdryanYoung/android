<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/upload_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">

    <LinearLayout
        android:id="@+id/items_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Options -->
        <TextView
            android:id="@+id/upload_files"
            style="@style/BottomSheetOption"
            android:text="@string/upload_files"
            app:drawableStartCompat="@drawable/ic_file_upload_medium_thin_outline" />

        <TextView
            android:id="@+id/upload_folder"
            style="@style/BottomSheetOption"
            android:text="@string/upload_folder"
            app:drawableStartCompat="@drawable/ic_folder_arrow_medium_thin_outline" />

        <include layout="@layout/view_linear_layout_72_margin_start_separator" />

        <TextView
            android:id="@+id/scan_document_option"
            style="@style/BottomSheetOption"
            android:text="@string/menu_scan_document"
            app:drawableStartCompat="@drawable/ic_file_scan_medium_thin_outline" />

        <TextView
            android:id="@+id/take_picture_option"
            style="@style/BottomSheetOption"
            android:layout_width="match_parent"
            android:text="@string/menu_take_picture"
            app:drawableStartCompat="@drawable/ic_camera_medium_thin_outline" />

        <include layout="@layout/view_linear_layout_72_margin_start_separator" />

        <TextView
            android:id="@+id/new_folder_option"
            style="@style/BottomSheetOption"
            android:text="@string/action_create_folder"
            app:drawableStartCompat="@drawable/ic_folder_plus_01_medium_thin_outline" />

        <TextView
            android:id="@+id/new_txt_option"
            style="@style/BottomSheetOption"
            android:layout_width="match_parent"
            android:text="@string/action_create_txt"
            app:drawableStartCompat="@drawable/ic_file_plus_02_medium_thin_outline" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
