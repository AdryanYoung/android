<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/items_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/btn_start_meeting"
        style="@style/BottomSheetOption"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/action_start_meeting_now"
        app:drawableStartCompat="@drawable/ic_video_plus_medium_thin_outline" />

    <View
        android:id="@+id/divider_join"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="72dp"
        android:background="@color/grey_012_white_012" />

    <TextView
        android:id="@+id/btn_join_meeting"
        style="@style/BottomSheetOption"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/join_meeting"
        app:drawableStartCompat="@drawable/ic_video_join_medium_thin_outline" />

    <View
        android:id="@+id/divider_schedule"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="72dp"
        android:background="@color/grey_012_white_012"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/btn_schedule_meeting"
        style="@style/BottomSheetOption"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/chat_schedule_meeting"
        app:drawableStartCompat="@drawable/ic_calendar_01_medium_thin_outline"
        tools:visibility="visible" />
</LinearLayout>
